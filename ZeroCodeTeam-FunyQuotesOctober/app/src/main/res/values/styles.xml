<resources>

    <style name="AppBaseTheme" parent="@android:style/Theme.Light" />

    <style name="AppTheme" parent="@style/AppBaseTheme" />

    <style name="TextRating">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#ff555555</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">#ffedeef2</item>
        <item name="android:paddingLeft">1.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:shadowColor">#ff888888</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="PagerRating">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff555555</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">1.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:shadowColor">#ff888888</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="ButtonCaption">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">1.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:shadowColor">#ff888888</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
    <!--<style name="MyCustomTheme" parent="@android:style/Theme.Holo.Dialog.NoActionBar">-->
    <style name="MyCustomTheme" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>
    </style>

    <style name="MyAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/anim_in</item>
        <item name="android:windowExitAnimation">@anim/anim_out</item>
    </style>


    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>
